package com.user.configuration;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;

import com.user.model.OrderReport;

@FeignClient(name = "product-service")  // This name should match the service registered with Eureka
public interface FeignClientCall {

    @GetMapping("/api/products/{productId}")
    OrderReport getProductById(@RequestBody OrderReport orderReport);
}
